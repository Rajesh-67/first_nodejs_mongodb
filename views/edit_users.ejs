
<%- include('layout/header') %>


<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <Center>
        
        <div class="card" style="margin-top: 50px;">
          <div><h2>Edit Users( <%= user.name %>)</h2></div>
        <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
          <div class="form-group row" style="padding: 10px;">
              <label class="col-sm-5 col-form-label"><b>Name :</b></label>
              <div class="col-sm-5">
                  <input type="text" name="name" value="<%= user.name %>" class="form-control" required autocomplete="off">
              </div>
          </div>
          <div class="form-group row" style="padding: 10px;">
              <label class="col-sm-5 col-form-label"><b>Email :</b></label>
              <div class="col-sm-5">
                  <input type="email" name="email"  value="<%= user.email %>" class="form-control" required>
              </div>
          </div>
          <div class="form-group row" style="padding: 10px;">
              <label class="col-sm-5 col-form-label"><b>Phone :</b></label>
              <div class="col-sm-5">
                  <input type="number" name="phone"  value="<%= user.phone %>" class="form-control" required>
              </div>
          </div>
          <div class="form-group row" style="padding: 10px;">
              <label for="" class="col-sm-5 col-form-label"><b>Select Image :</b></label>
              <div class="col-sm-5">
                  <input type="file" name="image" class="form-control">
                  <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1">
                  <input type="hidden" value="<%= user.image %>" name="old_image">
              </div>
          </div>
         
          <div class="col-sm-4" style="padding: 10px;">
              <button name="submit" value="Update" class="btn btn-warning">Update</button>
              <!-- <a href="index.php" type="button" class="btn btn-info" value="HOME">HOME</a> -->
          </div>
      </form>
    </div>
      </Center>
    </div>
  </div>
</div>


<%- include('layout/footer') %>