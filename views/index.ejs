<%- include('layout/header') %>



<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      
      <div class="table-responsive">
        <% if(users != ''){ %> 
        <table class="table table-stripped text-center my-3">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Image</th>
              <th>Name</th>
              <th>E-Mail</th>
              <th>Phone</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((row, index) => { %>
 
            <tr class="align-middle">
              <td><%= index+1 %></td>
              <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
              <td><%= row.name %></td>
              <td><%= row.email %></td>
              <td><%= row.phone %></td>
              <td>
                <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit"></i></a>
                <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash"></i></a>

              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
              <h1 class="text-center text-secondary mt-5">No Users Found in the Database</h1>
          <% }  %>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>

